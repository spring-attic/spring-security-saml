<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:security="http://www.springframework.org/schema/security"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        https://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/security
        https://www.springframework.org/schema/security/spring-security.xsd">

    <bean id="samlConfiguration"
          class="org.springframework.security.saml2.boot.configuration.Saml2BootConfiguration"/>

    <bean id="samlServiceProviderConfiguration"
          factory-bean="samlConfiguration"
          factory-method="samlServiceProviderConfiguration">
    </bean>

    <bean id="samlTransformer"
          class="org.springframework.security.saml2.spi.opensaml.OpenSaml2Transformer"/>

    <bean id="samlServiceProviderValidator"
          class="org.springframework.security.saml2.provider.validation.DefaultSaml2ServiceProviderValidator">
        <constructor-arg ref="samlTransformer"/>
    </bean>

    <bean id="samlServiceProviderMetadataResolver"
          class="org.springframework.security.saml2.serviceprovider.web.metadata.DefaultSaml2ServiceProviderMetadataResolver">
        <constructor-arg ref="samlTransformer"/>
    </bean>

    <bean id="samlServiceProviderConfigurationResolver"
          class="org.springframework.security.saml2.serviceprovider.web.configuration.SingletonSaml2ServiceProviderConfigurationResolver">
        <constructor-arg ref="samlServiceProviderConfiguration"/>
    </bean>

    <bean id="samlServiceProviderResolver"
          class="org.springframework.security.saml2.serviceprovider.web.DefaultSaml2ServiceProviderResolver">
        <constructor-arg ref="samlServiceProviderMetadataResolver"/>
        <constructor-arg ref="samlServiceProviderConfigurationResolver"/>
    </bean>

	<bean id="samlServiceProviderMethods"
		  class="org.springframework.security.saml2.serviceprovider.web.util.Saml2ServiceProviderMethods">
		<constructor-arg ref="samlTransformer"/>
		<constructor-arg ref="samlServiceProviderResolver"/>
		<constructor-arg ref="samlServiceProviderValidator"/>
	</bean>

	<bean id="samlServiceProviderResponder"
		  class="org.springframework.security.saml2.serviceprovider.web.binding.DefaultSaml2HttpMessageResponder">
		<constructor-arg ref="samlServiceProviderMethods"/>
		<constructor-arg>
			<bean class="org.springframework.security.web.DefaultRedirectStrategy"/>
		</constructor-arg>
	</bean>

	<bean id="samlAuthenticationTokenResolver"
		  class="org.springframework.security.saml2.serviceprovider.web.authentication.DefaultSaml2AuthenticationTokenResolver">
		<constructor-arg ref="samlServiceProviderMethods"/>
	</bean>

    <bean id="pathPrefix"
          factory-bean="samlServiceProviderConfiguration"
          factory-method="getPathPrefix"
          class="java.lang.String"
    />
    <bean id="samlMatcher"
          class="org.springframework.security.web.util.matcher.AntPathRequestMatcher">
        <constructor-arg value="#{'/' + pathPrefix + '/**'}"/>
    </bean>

    <bean id="metadataMatcher"
          class="org.springframework.security.web.util.matcher.AntPathRequestMatcher">
        <constructor-arg value="#{'/' + pathPrefix + '/metadata/**'}"/>
    </bean>

	<bean id="staticIdpLoginMatcher"
		  class="org.springframework.security.web.util.matcher.AntPathRequestMatcher">
		<constructor-arg value="#{'/' + pathPrefix + '/login/**'}"/>
	</bean>

    <bean id="selectIdpMatcher"
          class="org.springframework.security.web.util.matcher.AntPathRequestMatcher">
        <constructor-arg value="#{'/' + pathPrefix + '/select/**'}"/>
    </bean>

    <bean id="idpDiscoveryMatcher"
          class="org.springframework.security.web.util.matcher.AntPathRequestMatcher">
        <constructor-arg value="#{'/' + pathPrefix + '/authenticate/**'}"/>
    </bean>

    <bean id="samlAuthenticationEntryPoint"
          class="org.springframework.security.web.authentication.LoginUrlAuthenticationEntryPoint">
        <constructor-arg value="#{'/' + pathPrefix + '/login'}"/>
    </bean>

    <bean id="samlSpMetadataFilter"
          class="org.springframework.security.saml2.serviceprovider.web.filter.Saml2ServiceProviderMetadataFilter">
        <constructor-arg ref="samlServiceProviderResolver"/>
        <constructor-arg ref="samlTransformer"/>
		<constructor-arg ref="metadataMatcher"/>
    </bean>

    <bean id="logoutMatcher"
          class="org.springframework.security.web.util.matcher.AntPathRequestMatcher">
        <constructor-arg value="#{'/' + pathPrefix + '/logout/**'}"/>
    </bean>

	<bean id="staticLoginPageUrls" class="org.springframework.security.saml2.samples.LoginPageUrlGenerator">
		<constructor-arg ref="samlServiceProviderConfiguration"/>
	</bean>

    <bean id="samlLoginPageGeneratingFilter"
          class="org.springframework.security.saml2.serviceprovider.web.filter.Saml2LoginPageGeneratingFilter">
        <constructor-arg ref="staticIdpLoginMatcher"/>
		<constructor-arg value="#{@staticLoginPageUrls.getStaticLoginUrls()}"/>
    </bean>

	<bean id="saml2AuthenticationRequestResolver"
		  class="org.springframework.security.saml2.serviceprovider.web.authentication.DefaultSaml2AuthenticationRequestResolver">
		<constructor-arg ref="samlServiceProviderMethods"/>
	</bean>

	<bean id="saml2AuthenticationRequestFilter"
          class="org.springframework.security.saml2.serviceprovider.web.filter.Saml2AuthenticationRequestFilter">
        <constructor-arg ref="saml2AuthenticationRequestResolver"/>
		<constructor-arg ref="samlServiceProviderResponder"/>
		<constructor-arg ref="idpDiscoveryMatcher"/>
    </bean>

    <bean id="samlAuthenticationManager"
          class="org.springframework.security.saml2.samples.NoOpAuthenticationManager"/>

    <bean id="samlWebSsoAuthenticationFilter"
          class="org.springframework.security.saml2.serviceprovider.web.filter.Saml2WebSsoAuthenticationFilter">
        <constructor-arg ref="samlAuthenticationTokenResolver"/>
		<constructor-arg>
			<bean class="org.springframework.security.web.util.matcher.AntPathRequestMatcher">
				<constructor-arg value="#{'/' + pathPrefix + '/SSO/**'}"/>
			</bean>
		</constructor-arg>
        <property name="authenticationManager" ref="samlAuthenticationManager"/>
        <property name="authenticationFailureHandler">
            <bean class="org.springframework.security.saml2.serviceprovider.web.filter.Saml2AuthenticationFailureHandler"/>
        </property>
    </bean>

    <bean id="serviceProviderLogoutFilter"
          class="org.springframework.security.saml2.serviceprovider.web.filter.Saml2ServiceProviderLogoutFilter">

		<constructor-arg ref="samlServiceProviderMethods"/>
		<constructor-arg ref="samlServiceProviderResponder"/>
		<constructor-arg ref="logoutMatcher"/>
        <property name="logoutSuccessHandler">
            <bean class="org.springframework.security.web.authentication.logout.SimpleUrlLogoutSuccessHandler">
                <property name="defaultTargetUrl" value="#{'/' + pathPrefix + '/select'}"/>
            </bean>
        </property>
    </bean>

    <!-- BEGIN - the following two chains are used by integration tests -->
    <security:http pattern="/resources/**"
                   use-expressions="true"
                   entry-point-ref="samlAuthenticationEntryPoint"
                   authentication-manager-ref="samlAuthenticationManager">
        <security:intercept-url pattern="/**" access="isFullyAuthenticated()"/>
    </security:http>

    <security:http pattern="/test/**"
                   use-expressions="true"
                   entry-point-ref="samlAuthenticationEntryPoint"
                   authentication-manager-ref="samlAuthenticationManager">
        <security:intercept-url pattern="/**" access="isFullyAuthenticated()"/>
    </security:http>
    <!-- END - the previous two chains are used by integration tests -->

    <security:http pattern="/**"
                   use-expressions="true"
                   entry-point-ref="samlAuthenticationEntryPoint"
                   authentication-manager-ref="samlAuthenticationManager">
        <security:intercept-url pattern="#{'/' + pathPrefix + '/**'}" access="permitAll()"/>
        <security:intercept-url pattern="/error" access="permitAll()"/>
        <security:intercept-url pattern="/saml/sp/**" access="permitAll()" method="GET"/>
        <security:intercept-url pattern="/saml/sp/**" access="permitAll()" method="POST"/>
        <security:intercept-url pattern="/**" access="isFullyAuthenticated()"/>
        <security:custom-filter ref="samlSpMetadataFilter" before="DIGEST_AUTH_FILTER"/>
        <security:custom-filter ref="samlLoginPageGeneratingFilter" position="DIGEST_AUTH_FILTER"/>
        <security:custom-filter ref="saml2AuthenticationRequestFilter" before="BASIC_AUTH_FILTER"/>
        <security:custom-filter ref="samlWebSsoAuthenticationFilter" position="BASIC_AUTH_FILTER"/>
        <security:custom-filter ref="serviceProviderLogoutFilter" after="BASIC_AUTH_FILTER"/>
        <security:csrf request-matcher-ref="samlMatcher" disabled="true"/>
    </security:http>

</beans>
